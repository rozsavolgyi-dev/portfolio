---
import { CheckCircle } from "lucide-react";

interface Props {
  whoWeAreTitle: string;
  whoWeAreText1: string;
  whoWeAreText2: string;
  differencesTitle: string;
  differences: string[];
}

const {
  whoWeAreTitle,
  whoWeAreText1,
  whoWeAreText2,
  differencesTitle,
  differences,
} = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 py-24">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
    <div>
      <h2 class="text-3xl font-bold text-slate-900 mb-6">{whoWeAreTitle}</h2>
      <p class="text-lg text-slate-600 leading-relaxed mb-6">
        {whoWeAreText1}
      </p>
      <p class="text-lg text-slate-600 leading-relaxed">
        {whoWeAreText2}
      </p>
    </div>
    <div
      class="bg-white p-8 md:p-10 rounded-2xl border border-gray-100 shadow-xl shadow-gray-100/50"
    >
      <h2 class="text-2xl font-bold text-slate-900 mb-8">{differencesTitle}</h2>
      <ul class="space-y-5">
        {
          differences.map((diff) => (
            <li class="flex items-start gap-4 text-slate-700">
              <CheckCircle className="w-6 h-6 text-green-500 shrink-0 mt-0.5" />
              <span class="text-lg font-medium">{diff}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
