---
import { CheckCircle } from "lucide-react";

interface Props {
  whoWeAreTitle: string;
  whoWeAreText1: string;
  whoWeAreText2: string;
  differencesTitle: string;
  differences: string[];
}

const {
  whoWeAreTitle,
  whoWeAreText1,
  whoWeAreText2,
  differencesTitle,
  differences,
} = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 py-24 relative">
  <div
    class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center relative z-10"
  >
    <div>
      <h2 class="text-3xl font-bold text-white mb-6">{whoWeAreTitle}</h2>
      <p class="text-lg text-zinc-400 leading-relaxed mb-6">
        {whoWeAreText1}
      </p>
      <p class="text-lg text-zinc-400 leading-relaxed">
        {whoWeAreText2}
      </p>
    </div>
    <div
      class="bg-white/5 p-8 md:p-10 rounded-3xl border border-white/10 shadow-2xl backdrop-blur-xl"
    >
      <h2 class="text-2xl font-bold text-white mb-8">{differencesTitle}</h2>
      <ul class="space-y-5">
        {
          differences.map((diff) => (
            <li class="flex items-start gap-4 text-zinc-300">
              <CheckCircle className="w-6 h-6 text-cyan-400 shrink-0 mt-0.5" />
              <span class="text-lg font-medium">{diff}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
