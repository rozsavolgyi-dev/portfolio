---
import { ProcessTimeline } from "../ProcessTimeline";

interface Step {
  title: string;
  description: string;
}

interface Props {
  title: string;
  description: string;
  noMiddleLayersTitle: string;
  noMiddleLayersDesc: string;
  steps: Step[];
}

const { title, description, noMiddleLayersTitle, noMiddleLayersDesc, steps } =
  Astro.props;
---

<section class="max-w-6xl mx-auto px-4 py-24 relative">
  <div class="flex flex-col lg:flex-row gap-16 relative z-10">
    <div class="lg:w-1/3">
      <div class="inline-flex items-center mb-6">
        <span
          class="font-mono text-xs uppercase tracking-widest text-cyan-400 border border-cyan-500/30 bg-cyan-500/10 px-3 py-1 rounded-full"
          >Methodology</span
        >
      </div>
      <h2
        class="text-4xl md:text-5xl font-display font-bold text-white mb-6 tracking-tight"
      >
        {title}
      </h2>
      <p class="text-lg text-zinc-400 leading-relaxed mb-8">
        {description}
      </p>
      <div
        class="p-8 bg-white/5 rounded-3xl border border-white/10 backdrop-blur-md relative overflow-hidden group"
      >
        <div class="relative z-10">
          <p
            class="text-white font-display font-bold text-lg mb-3 tracking-tight flex items-center gap-2"
          >
            <span class="w-2 h-2 rounded-full bg-cyan-400"></span>
            {noMiddleLayersTitle}
          </p>
          <p class="text-zinc-300 text-sm leading-relaxed">
            {noMiddleLayersDesc}
          </p>
        </div>
        <!-- Glow -->
        <div
          class="absolute -top-10 -right-10 w-32 h-32 bg-cyan-500/20 rounded-full blur-3xl opacity-50 transition-opacity"
        >
        </div>
      </div>
    </div>
    <div class="lg:w-2/3">
      <ProcessTimeline client:load steps={steps} />
    </div>
  </div>
</section>
