---
import { ServiceCard, type VisualId } from "../ServiceCard";

interface Service {
  title: string;
  description: string;
  features: string[];
  visualId: VisualId;
}

interface Props {
  title: string;
  subtitle: string;
  services: Service[];
}

const { title, subtitle, services } = Astro.props;

const bentoClasses = [
  "lg:col-span-2 lg:row-span-2",
  "lg:col-span-2 lg:row-span-1",
  "lg:col-span-1 lg:row-span-1",
  "lg:col-span-1 lg:row-span-1",
];
---

<section class="bg-zinc-950 relative border-y border-white/5">
  <div class="max-w-7xl mx-auto px-4 py-32 relative z-10">
    <div class="text-center mb-24">
      <div class="inline-flex justify-center items-center mb-6">
        <span class="font-mono text-xs uppercase tracking-widest text-cyan-400"
          >Core Capabilities</span
        >
      </div>
      <h2
        class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6 tracking-tight"
      >
        {title}
      </h2>
      <p class="text-zinc-400 max-w-2xl mx-auto text-xl leading-relaxed">
        {subtitle}
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 lg:grid-rows-2 gap-6 auto-rows-[1fr]"
    >
      {
        services.map((service, index) => (
          <ServiceCard
            client:idle
            title={service.title}
            description={service.description}
            features={service.features}
            visualId={service.visualId}
            className={bentoClasses[index % bentoClasses.length]}
            index={index}
          />
        ))
      }
    </div>
  </div>

  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-cyan-900/10 blur-[150px] rounded-full pointer-events-none"
  >
  </div>
</section>
