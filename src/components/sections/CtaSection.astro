---
interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 pb-24">
  <div
    class="bg-indigo-600 rounded-3xl p-12 text-center text-white relative overflow-hidden"
  >
    <div class="relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">{title}</h2>
      <p class="text-indigo-100 text-xl mb-10 max-w-2xl mx-auto">
        {subtitle}
      </p>
      <a
        href={ctaLink}
        class="inline-flex items-center justify-center px-10 py-4 text-xl font-bold text-indigo-600 bg-white rounded-xl hover:bg-indigo-50 transition-all shadow-xl active:scale-95"
      >
        {ctaText}
      </a>
    </div>
    <!-- Background decorations -->
    <div
      class="absolute -bottom-24 -right-24 w-64 h-64 bg-indigo-500 rounded-full opacity-50"
    >
    </div>
    <div
      class="absolute -top-24 -left-24 w-64 h-64 bg-indigo-700 rounded-full opacity-50"
    >
    </div>
  </div>
</section>
