---
interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 pb-24">
  <div
    class="bg-gradient-to-br from-cyan-900/40 to-[#050505] rounded-3xl p-12 text-center text-white relative overflow-hidden border border-white/10"
  >
    <div class="relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">{title}</h2>
      <p class="text-zinc-300 text-xl mb-10 max-w-2xl mx-auto">
        {subtitle}
      </p>
      <a
        href={ctaLink}
        class="inline-flex items-center justify-center px-10 py-4 text-xl font-bold text-black bg-white rounded-xl hover:bg-zinc-200 transition-all shadow-[0_0_20px_rgba(255,255,255,0.2)] active:scale-95"
      >
        {ctaText}
      </a>
    </div>
    <!-- Background decorations -->
    <div
      class="absolute -bottom-24 -right-24 w-64 h-64 bg-cyan-500/30 blur-3xl rounded-full"
    >
    </div>
    <div
      class="absolute -top-24 -left-24 w-64 h-64 bg-blue-600/30 blur-3xl rounded-full"
    >
    </div>
  </div>
</section>
