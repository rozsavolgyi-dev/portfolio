---
import { Rocket } from "lucide-react";

interface Props {
  badgeText: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { badgeText, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="relative overflow-hidden bg-slate-50 border-b border-gray-100">
  <div
    class="max-w-6xl mx-auto px-4 py-24 lg:py-32 flex flex-col items-center text-center relative z-10"
  >
    <div
      class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-50 text-indigo-700 text-sm font-medium mb-6 animate-fade-in border border-indigo-100"
    >
      <Rocket className="w-4 h-4" />
      <span>{badgeText}</span>
    </div>
    <h1
      class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight text-slate-900 mb-8 max-w-4xl leading-[1.1]"
    >
      <slot name="title" />
    </h1>
    <p
      class="text-lg md:text-xl text-slate-600 max-w-2xl mb-10 leading-relaxed"
    >
      {subtitle}
    </p>
    <div class="flex flex-col sm:flex-row gap-4">
      <a
        href={ctaLink}
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-indigo-600 rounded-xl hover:bg-indigo-700 transition-all shadow-lg shadow-indigo-200 hover:shadow-indigo-300 active:scale-95"
      >
        {ctaText}
      </a>
    </div>
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
  >
    <div
      class="absolute -top-[25%] -right-[10%] w-[50%] h-[50%] bg-indigo-100/30 blur-[120px] rounded-full"
    >
    </div>
    <div
      class="absolute -bottom-[25%] -left-[10%] w-[50%] h-[50%] bg-blue-100/30 blur-[120px] rounded-full"
    >
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>
