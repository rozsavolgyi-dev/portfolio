---
import { Rocket } from "lucide-react";

interface Props {
  badgeText: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { badgeText, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="relative overflow-hidden bg-[#050505] border-b border-white/5">
  <div
    class="max-w-6xl mx-auto px-4 py-24 lg:py-32 flex flex-col items-center text-center relative z-10"
  >
    <div
      class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/5 text-cyan-400 text-sm font-medium mb-6 animate-fade-in border border-white/10 backdrop-blur-sm"
    >
      <Rocket className="w-4 h-4" />
      <span>{badgeText}</span>
    </div>
    <h1
      class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight text-white mb-8 max-w-4xl leading-[1.1]"
    >
      <slot name="title" />
    </h1>
    <p class="text-lg md:text-xl text-zinc-400 max-w-2xl mb-10 leading-relaxed">
      {subtitle}
    </p>
    <div class="flex flex-col sm:flex-row gap-4">
      <a
        href={ctaLink}
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-cyan-500 to-blue-600 rounded-xl hover:from-cyan-400 hover:to-blue-500 transition-all shadow-[0_0_30px_-5px_var(--tw-shadow-color)] shadow-cyan-500/30 active:scale-95"
      >
        {ctaText}
      </a>
    </div>
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
  >
    <div
      class="absolute -top-[25%] -right-[10%] w-[50%] h-[50%] bg-blue-600/20 blur-[130px] rounded-full"
    >
    </div>
    <div
      class="absolute -bottom-[25%] -left-[10%] w-[50%] h-[50%] bg-cyan-500/20 blur-[130px] rounded-full"
    >
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>
