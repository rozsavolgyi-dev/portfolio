---
import Layout from "../../layouts/Layout.astro";
import ProjectCard from "../../components/ProjectCard";
// We fetch Markdown files using this built-in function
import { getCollection } from "astro:content";

// Fetch all projects and sort them from newest to oldest
const allProjects = await getCollection("projects", (entry) =>
  entry.id.startsWith("en/"),
);

// We strip the 'en/' prefix from the id (e.g., 'en/first-project') for the link
const sortedProjects = allProjects.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<Layout title="Home" description="Rosavallis - Professional Web Development">
  <section class="max-w-6xl mx-auto px-4 py-20 text-center">
    <h1 class="text-5xl font-extrabold tracking-tight mb-6">
      Modern websites powered by <span class="text-blue-600">React</span>
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Our portfolio is under construction! New projects are coming soon.
    </p>
  </section>

  <section class="max-w-6xl mx-auto px-4 py-12 mb-20">
    <div class="flex justify-between items-end mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Latest projects</h2>
      <a
        href="/en/projects"
        class="text-blue-600 font-medium hover:underline hidden sm:block"
        >View all &rarr;</a
      >
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        sortedProjects.map((project: any) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            tags={project.data.tags}
            href={`/en/projects/${project.id.replace("en/", "")}`}
          />
        ))
      }
    </div>
  </section>
</Layout>
