---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/sections/Hero.astro";
import ValueProposition from "../components/sections/ValueProposition.astro";
import ServicesSection from "../components/sections/ServicesSection.astro";
import ProcessSection from "../components/sections/ProcessSection.astro";
import CtaSection from "../components/sections/CtaSection.astro";

const services = [
  {
    title: "Egyedi szoftverfejlesztés",
    description:
      "Olyan személyre szabott szoftvermegoldásokat tervezünk és építünk, amelyek a te üzletedhez igazodnak, nem pedig fordítva. Legyen szó a semmiből felépített teljes platformról vagy egyedi belső eszközről, olyan rendszereket hozunk létre, amelyek:",
    features: [
      "Skálázhatók, ahogy az üzleted növekszik",
      "Biztonságosak és megbízhatóak",
      "Könnyen használhatók",
    ],
    visualId: "software" as const,
  },
  {
    title: "Webalkalmazások és platformok",
    description:
      "Gyors, modern webalkalmazásokat építünk, amelyek bárhonnan elérhetőek. Az ügyfélportáloktól a teljes SaaS platformokig olyan megoldásokat szállítunk, amelyek:",
    features: [
      "Zökkenőmentes felhasználói élményt nyújtanak",
      "Kifogástalanul működnek minden eszközön",
      "Jól kezelik a valós forgalmat és adatokat",
    ],
    visualId: "web" as const,
  },
  {
    title: "Rendszertervezés és architektúra",
    description:
      "A jó szoftver a jó struktúrával kezdődik. Minden rendszert gondosan megtervezünk, hogy biztosítsuk:",
    features: [
      "A hosszútávú karbantarthatóságot",
      "A magas teljesítményt",
      "Az adatbiztonságot",
    ],
    visualId: "architecture" as const,
  },
  {
    title: "Üzemeltetés és folyamatos támogatás",
    description:
      "Nem csak kódot írunk, működő megoldásokat szállítunk. Vállaljuk:",
    features: [
      "A biztonságos telepítést és élesítést",
      "Szerverbeállítást",
      "Teljesítményoptimalizálást",
    ],
    visualId: "support" as const,
  },
];

const processSteps = [
  {
    title: "1. Felfedezés és tervezés",
    description:
      "Megértjük az üzleti céljaidat és a technikai követelményeket.",
  },
  {
    title: "2. Architektúra és dizájn",
    description:
      "Kódolás előtt megtervezzük a skálázható és fenntartható rendszert.",
  },
  {
    title: "3. Fejlesztés",
    description:
      "Tiszta, strukturált implementáció, folyamatos visszajelzéssel.",
  },
  {
    title: "4. Tesztelés és élesítés",
    description:
      "Gondoskodunk a stabilitásról és a teljesítményről az indulás előtt.",
  },
  {
    title: "5. Hosszútávú támogatás",
    description:
      "Rendelkezésre állunk a jövőbeli fejlesztések és karbantartás során.",
  },
];

const differences = [
  "Éles, produkciós szintű tapasztalat (nem hobbi projektek)",
  "Tiszta, karbantartható, skálázható kód",
  "Üzletközpontú gondolkodásmód",
  "Közvetlen kommunikáció a mérnökökkel (nincsenek közvetítő rétegek)",
  "Hosszútávon fenntartható megoldások",
];
---

<Layout
  title="Megbízható és skálázható szoftverek"
  description="Rosavallis - Magas minőségű webes, mobil és backend megoldásokat szállítunk startupok, KKV-k és növekvő vállalkozások számára."
>
  <Hero
    badgeText="Senior Fejlesztő Ügynökség"
    subtitle="Három főállású szoftvermérnökből álló csapat vagyunk, akik magas minőségű webes, mobil és backend megoldásokat szállítanak startupok, KKV-k és növekvő vállalkozások számára."
    ctaText="Dolgozzunk együtt"
    ctaLink="mailto:hello@rosavallis.com"
  >
    <Fragment slot="title">
      Megbízható és <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500"
        >skálázható</span
      > szoftvereket építünk, amelyek az üzleti növekedést szolgálják.
    </Fragment>
  </Hero>

  <ValueProposition
    whoWeAreTitle="Kik vagyunk"
    whoWeAreText1="Három tapasztalt szoftverfejlesztőből álló csapat vagyunk, akik főállásban dolgoznak a technológiai szektorban. Miután éveken át építettünk éles rendszereket, skálázható alkalmazásokat és valós üzleti megoldásokat, azért alapítottuk meg a cégünket, hogy segítsünk a vállalkozásoknak ötleteiket robusztus szoftvertermékekké alakítani."
    whoWeAreText2="Az erős mérnöki elveket gyakorlati üzleti megértéssel ötvözzük, mert egy szoftvernek nem csupán működnie kell, hanem értéket kell teremtenie."
    differencesTitle="Miben vagyunk mások"
    differences={differences}
  />

  <ServicesSection
    title="Szolgáltatásaink"
    subtitle="Teljes körű mérnöki kiválóságot biztosítunk, a kezdeti architektúra tervezéstől az élesítésig."
    services={services}
  />

  <ProcessSection
    title="Hogyan dolgozunk"
    description="A munkafolyamatunk úgy van kialakítva, hogy biztosítsa az átláthatóságot, a minőséget és a projektek hosszútávú sikerét. Minden szakaszban a legjobb iparági gyakorlatokat követjük."
    noMiddleLayersTitle="Nincsenek közvetítő rétegek."
    noMiddleLayersDesc="Közvetlenül azokkal a mérnökökkel fogsz kommunikálni, akik a szoftveredet építik."
    steps={processSteps}
  />

  <CtaSection
    title="Készen állsz valami robusztus megépítésére?"
    subtitle="Tedd meg az első lépést egy skálázható szoftvermegoldás felé még ma! Kérj ingyenes konzultációt."
    ctaText="Dolgozzunk együtt"
    ctaLink="mailto:hello@rosavallis.com"
  />
</Layout>
